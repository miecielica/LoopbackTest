<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LoopbackTest.Pages.MainPage">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="10*"/>
      <RowDefinition Height="80*"/>
      <RowDefinition Height="10*"/>
    </Grid.RowDefinitions>
    <Label Grid.Row="0" Text="{Binding Username}" VerticalOptions="Center" HorizontalOptions="Center" />
    <Button Grid.Row="2" Text="Logout" VerticalOptions="End" Clicked="LogoutClicked"/>
  </Grid>
  
  
    </ContentPage>